<div class="container mt-5 text-white bgImg">
  <div class="row">

    <form action="/users/register" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input name="name" type="text" class="form-control" id="name" autocomplete="name" autofocus>
      </div>
      <div class="mb-3">
        <label for="lastName" class="form-label">Lastname</label>
        <input name="lastName" type="text" class="form-control" id="lastName" autocomplete="additional-name">
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input name="email" type="text" class="form-control" id="email" autocomplete="email">
      </div>
      <div class="mb-3">
        <label for="pass" class="form-label">Password</label>
        <input name="pass" type="password" class="form-control" id="pass" autocomplete="current-password">
      </div>
      {{#if message}}
      <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
          class="gbi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img"
          aria-label="Warning:">
          <path
            d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <div>
          {{message}}
        </div>
      </div>
      {{/if}}
       <div class="d-flex justify-content-between">
        <input type="submit" class="btn btn-success " value="Registre mi usuario" />
        <a href="/users/login" class="btn btn-warning" >Volver para Login</a>
       
      </div>
  </div>
  </form>
  
</div>
