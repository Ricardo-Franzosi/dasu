<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="py-4 col-10 col-md-6 col-lg-5">
      <h1>Informaci√≥n de Registro de Usuario</h1>
      <p>Last modification: {{user.updatedAt}}</p>
      {{#if user.validated}}
      <p>Account validated</p>
      {{else}}
      <p>Cuenta no validada</p>
      {{/if}}
    </div>
    <form class="container col-5 bg-dark py-4 px-4 col-10 col-md-6 col-lg-5" action="/users/settings" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input name="name" type="text" class="form-control" id="name" autocomplete="name" value="{{user.name}}">
      </div>
      <div class="mb-3">
        <label for="lastName" class="form-label">Lastname</label>
        <input name="lastName" type="text" class="form-control" id="lastName" autocomplete="additional-name"
          value="{{user.lastName}}">
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input name="email" type="text" class="form-control" id="email" autocomplete="email" value="{{user.email}}">
      </div>
      {{#if message}}
      <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
          class="gbi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img"
          aria-label="Warning:">
          <path
            d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <div>
          {{message}}
        </div>
      </div>
      {{/if}}
      <div class="d-flex justify-content-between">
        <input type="submit" class="btn btn-success " value="Confirm Changes" />
        {{!<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="exampleModal">borrar
          registro </button>}}
        <a href="/users/delete" type="button" class="btn btn-danger">Delete</a>
        <a href="/" class="btn btn-warning">Cancel Changes</a>
      </div>
    </form>
    {{!-- delete account confirmation modal --}}
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">PLEASE CONFIRM</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>Be careful</p>
            <p>This operation will delete your account</p>
            <p>ARE YOU SURE?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <a href="/users/delete" type="button" class="btn btn-danger">Delete</a>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>